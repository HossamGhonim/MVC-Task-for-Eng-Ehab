@model Eng_Ehab_Task.Models.Person

@{
    ViewData["Title"] = "Edit Person";
}

<h1>Edit Person</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersonID" />
            
             <div class="form-group mb-3">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SSN" class="control-label"></label>
                <input asp-for="SSN" class="form-control" />
                <span asp-validation-for="SSN" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

             <div class="form-group mb-3">
                <label asp-for="MilitaryStatus" class="control-label"></label>
                <select asp-for="MilitaryStatus" class="form-control">
                    <option value="">-- اختر الموقف من التجنيد --</option>
                    <option value="إعفاء نهائي">إعفاء نهائي</option>
                    <option value="إعفاء مؤقت">إعفاء مؤقت</option>
                    <option value="تأجيل">تأجيل</option>
                    <option value="أدى الخدمة العسكرية">أدى الخدمة العسكرية</option>
                    <option value="لم يؤدى الخدمة العسكرية">لم يؤدى الخدمة العسكرية</option>
                </select>
                <span asp-validation-for="MilitaryStatus" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

             <div class="form-group mb-3">
                <label asp-for="MaritalStatus" class="control-label"></label>
                 <select asp-for="MaritalStatus" class="form-control">
                    <option value="">Select Status</option>
                    <option value="Single">Single</option>
                    <option value="Married">Married</option>
                    <option value="Divorced">Divorced</option>
                     <option value="Widowed">Widowed</option>
                </select>
                <span asp-validation-for="MaritalStatus" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GovernorateID" class="control-label">Governorate</label>
                <select asp-for="GovernorateID" class ="form-control" asp-items="ViewBag.GovernorateID" id="GovernorateList">
                     <option value="">-- Select Governorate --</option>
                </select>
                <span asp-validation-for="GovernorateID" class="text-danger"></span>
            </div>

             <div class="form-group mb-3">
                <label asp-for="CityID" class="control-label">City</label>
                <select asp-for="CityID" class="form-control" id="CityList">
                    <option value="">-- Select City --</option>
                </select>
                <span asp-validation-for="CityID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="VillageID" class="control-label">Village</label>
                <select asp-for="VillageID" class="form-control" id="VillageList">
                    <option value="">-- Select Village --</option>
                </select>
                <span asp-validation-for="VillageID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

     <script>
        $(document).ready(function () {
             var currentCityId = '@Model.CityID';
             var currentVillageId = '@Model.VillageID';

            // Function to load cities
            function loadCities(govId, selectedCityId) {
                 $("#CityList").empty().append('<option value="">-- Select City --</option>');
                 if (govId) {
                    $.getJSON("/Cities/GetCitiesByGovernorate", { governorateId: govId }, function (data) {
                        $.each(data, function (index, item) {
                             var isSelected = (item.value == selectedCityId) ? "selected" : "";
                            $("#CityList").append('<option value="' + item.value + '" ' + isSelected + '>' + item.text + '</option>');
                        });
                         // After loading cities, if a city is selected, load villages
                         if(selectedCityId) {
                             loadVillages(selectedCityId, currentVillageId);
                         }
                    });
                } else {
                     $("#VillageList").empty().append('<option value="">-- Select Village --</option>');
                }
            }

            // Function to load villages
            function loadVillages(cityId, selectedVillageId) {
                 $("#VillageList").empty().append('<option value="">-- Select Village --</option>');
                if (cityId) {
                    $.getJSON("/Villages/GetVillagesByCity", { cityId: cityId }, function (data) {
                        $.each(data, function (index, item) {
                             var isSelected = (item.value == selectedVillageId) ? "selected" : "";
                            $("#VillageList").append('<option value="' + item.value + '" ' + isSelected + '>' + item.text + '</option>');
                        });
                    });
                }
            }

            // Initial Load
            var initialGovId = $("#GovernorateList").val();
            if(initialGovId) {
                loadCities(initialGovId, currentCityId);
            }

            // Governorate Change
            $("#GovernorateList").change(function () {
                var govId = $(this).val();
                $("#VillageList").empty().append('<option value="">-- Select Village --</option>');
                loadCities(govId, null);
            });

            // City Change
            $("#CityList").change(function () {
                var cityId = $(this).val();
                loadVillages(cityId, null);
            });
        });
    </script>
}
