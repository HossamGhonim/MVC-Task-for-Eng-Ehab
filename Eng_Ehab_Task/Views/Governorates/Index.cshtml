@model IEnumerable<Eng_Ehab_Task.Models.Governorate>

@{
    ViewData["Title"] = "Governorates";
}

<h1>Governorates</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GovernorateName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GovernorateName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GovernorateID" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.GovernorateID" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
